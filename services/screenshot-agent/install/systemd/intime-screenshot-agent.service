[Unit]
Description=InTime Screenshot Agent (Audit Compliance)
After=network.target

[Service]
Type=simple
User=EMPLOYEE_USER
WorkingDirectory=/opt/intime/screenshot-agent
Environment="NODE_ENV=production"
EnvironmentFile=/opt/intime/screenshot-agent/.env
ExecStart=/usr/bin/node /opt/intime/screenshot-agent/dist/index.js
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=intime-screenshot-agent

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/opt/intime/screenshot-agent

[Install]
WantedBy=multi-user.target
